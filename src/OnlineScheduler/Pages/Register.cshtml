@page
@model RegisterModel
@{
    ViewData["Title"] = "注册 - 在线日程管理";
    ViewData["CurrentPage"] = "register";
}
<form class="pure-form pure-form-stacked" id="register-form">
    <div class="register-legend">
        <h1>注册新账号</h1>
        <hr>
    </div>
    <fieldset>
        <label for="email">电子邮件地址</label>
        <input type="email" id="email" placeholder="例如john.smith@example.com" v-model="email" required>
        <label for="username">用户名</label>
        <input type="text" id="username" maxlength="30" placeholder="最大长度为30个字符" v-model="username" required>
        <label for="password">密码</label>
        <input type="password" id="password" minlength="10" maxlength="30" placeholder="长度在10到30个字符之间" v-model="password" required>
        <label for="confirm-pwd">确认密码</label>
        <input type="password" id="confirm-pwd" minlength="10" maxlength="30" placeholder="再次输入密码" v-model="comfirmPwd" required>
        <button type="submit" class="pure-button pure-button-primary submit-button">注册</button>
    </fieldset>
</form>
@section TemporaryMenu {
    <li class="pure-menu-item pure-menu-separator pure-menu-selected">
        <a href="register" class="pure-menu-link">注册账号</a>
    </li>
}
@section Scripts {
    <script src="~/js/register.js"></script>
}
